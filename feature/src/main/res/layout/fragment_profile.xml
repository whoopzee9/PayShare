<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp_60">

    <include
        android:id="@+id/frg_profile__layout_toolbar"
        layout="@layout/include_toolbar" />

    <ImageView
        android:id="@+id/frg_profile__iv_picture"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:src="@drawable/logo"
        android:layout_marginHorizontal="@dimen/dp_88"
        android:layout_marginTop="@dimen/dp_46"
        android:background="@drawable/background_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frg_profile__layout_toolbar" />

    <TextView
        android:id="@+id/frg_profile__tv_name"
        style="@style/TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frg_profile__iv_picture"
        tools:text="Иван Иванов" />

</androidx.constraintlayout.widget.ConstraintLayout>